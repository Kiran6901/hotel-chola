{%- comment -%}
  FOOTER SECTION
  3-column footer: About/Logo, Company Links, Contact Info
{%- endcomment -%}

<div class="footer" id="footer">
  <div class="footer-content">
    {%- comment -%} Column 1: Logo & Description {%- endcomment -%}
    <div class="footer-content-left">
      {%- if settings.logo != blank -%}
        <img
          class="logo"
          src="{{ settings.logo | image_url: width: 300 }}"
          alt="{{ shop.name }}"
          width="{{ settings.logo_width | default: 150 }}"
        >
      {%- else -%}
        <h2>{{ shop.name }}</h2>
      {%- endif -%}

      {%- if section.settings.footer_description != blank -%}
        <p>{{ section.settings.footer_description }}</p>
      {%- endif -%}

      <div class="footer-social-icons">
        {%- if settings.social_facebook != blank -%}
          <a href="{{ settings.social_facebook }}" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="#D9D9D9"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
          </a>
        {%- endif -%}
        {%- if settings.social_twitter != blank -%}
          <a href="{{ settings.social_twitter }}" target="_blank" rel="noopener noreferrer" aria-label="Twitter">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="#D9D9D9"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/></svg>
          </a>
        {%- endif -%}
        {%- if settings.social_linkedin != blank -%}
          <a href="{{ settings.social_linkedin }}" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="#D9D9D9"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
          </a>
        {%- endif -%}
        {%- if settings.social_instagram != blank -%}
          <a href="{{ settings.social_instagram }}" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="#D9D9D9" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
          </a>
        {%- endif -%}
      </div>
    </div>

    {%- comment -%} Column 2: Company Links {%- endcomment -%}
    <div class="footer-content-center">
      <h2>{{ section.settings.column2_title | default: 'COMPANY' }}</h2>
      <ul>
        {%- for link in linklists[section.settings.footer_menu].links -%}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {%- endfor -%}
        {%- if linklists[section.settings.footer_menu].links.size == 0 -%}
          <li><a href="/">Home</a></li>
          <li><a href="/pages/about">About us</a></li>
          <li><a href="/pages/delivery">Delivery</a></li>
          <li><a href="/pages/privacy-policy">Privacy policy</a></li>
          <li><a href="/pages/contact">Contact us</a></li>
        {%- endif -%}
      </ul>
    </div>

    {%- comment -%} Column 3: Contact Info {%- endcomment -%}
    <div class="footer-content-right">
      <h2>{{ section.settings.column3_title | default: 'GET IN TOUCH' }}</h2>
      <ul>
        {%- if section.settings.contact_phone != blank -%}
          <li class="contact-item">
            <span class="contact-icon">üìû</span>
            <a href="tel:{{ section.settings.contact_phone | remove: ' ' }}">{{ section.settings.contact_phone }}</a>
          </li>
        {%- endif -%}
        {%- if section.settings.contact_email != blank -%}
          <li class="contact-item">
            <span class="contact-icon">‚úâÔ∏è</span>
            <a href="mailto:{{ section.settings.contact_email }}">{{ section.settings.contact_email }}</a>
          </li>
        {%- endif -%}
        {%- if section.settings.contact_address != blank -%}
          <li class="contact-item">
            <span class="contact-icon">üìç</span>
            {{ section.settings.contact_address }}
          </li>
        {%- endif -%}
      </ul>
    </div>
  </div>

  <hr>
  <p class="footer-copyright">
    Copyright {{ 'now' | date: '%Y' }} &copy; {{ shop.name }} - {{ 'sections.footer.copyright' | t }}
  </p>
</div>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "About Column"
    },
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Footer Description",
      "default": "Hotel Chola is your go-to destination for authentic, delicious food experiences delivered straight to your doorstep. We offer a wide variety of mouthwatering meals crafted with the finest ingredients, ensuring every bite brings a burst of flavor."
    },
    {
      "type": "header",
      "content": "Links Column"
    },
    {
      "type": "text",
      "id": "column2_title",
      "label": "Column 2 Title",
      "default": "COMPANY"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu",
      "default": "footer",
      "info": "Select a navigation menu for the footer links"
    },
    {
      "type": "header",
      "content": "Contact Column"
    },
    {
      "type": "text",
      "id": "column3_title",
      "label": "Column 3 Title",
      "default": "GET IN TOUCH"
    },
    {
      "type": "text",
      "id": "contact_phone",
      "label": "Phone Number",
      "default": "9566806999"
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Email",
      "default": "contact@hotelchola.com"
    },
    {
      "type": "textarea",
      "id": "contact_address",
      "label": "Address",
      "default": "Hotel Chola, near GLIM, East Coast Road, Tamil Nadu - 603102"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#323232"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#D9D9D9"
    }
  ]
}
{% endschema %}

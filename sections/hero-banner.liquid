{%- comment -%}
  HERO BANNER SECTION
  Full-width hero with diagonal clip-path overlay, heading, contact info, and CTA
{%- endcomment -%}

{%- if section.settings.background_image != blank -%}
  <div class="header" style="background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');">
{%- else -%}
  <div class="header" style="background: linear-gradient(135deg, #FF4C24 0%, #ff7e5f 100%);">
{%- endif -%}
  <div class="header-contents" style="background: {{ section.settings.overlay_color | default: '#ffffff' }};">
    {%- if section.settings.heading != blank -%}
      <h2>{{ section.settings.heading }}</h2>
    {%- endif -%}

    <div class="header-contact">
      {%- if section.settings.phone != blank -%}
        <p>
          <i class="fa-solid fa-phone"></i>
          <a href="tel:{{ section.settings.phone | remove: ' ' }}">{{ section.settings.phone }}</a>
        </p>
      {%- endif -%}
      {%- if section.settings.website != blank -%}
        <p>
          <i class="fa-solid fa-globe"></i>
          {{ section.settings.website }}
        </p>
      {%- endif -%}
    </div>

    {%- if section.settings.cta_text != blank -%}
      <a href="{{ section.settings.cta_link | default: '#explore-menu' }}" class="btn">
        {{ section.settings.cta_text }}
      </a>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Recommended size: 1920x680px"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "DISCOVER THE BEST FOOD & DRINKS IN CHENNAI"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "9566806999"
    },
    {
      "type": "text",
      "id": "website",
      "label": "Website URL Text",
      "default": "www.hotelchola.com"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "View Menu"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Background Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
